{
    "compilerOptions": {
        "target": "ES6",
        "sourceMap": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "noImplicitAny": true
    },
    "compileOnSave": true,
    "filesGlob": [
        "../types/server.d.ts",
        "**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "release",
        ".git"
    ],
    "files": [
        "../types/server.d.ts",
        "service/proxy.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
